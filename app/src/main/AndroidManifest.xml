<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.adrianbrito.shoex">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.user.test.Login"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.user.test.Hello"
            android:label="@string/app_name" />
        <activity android:name=".ui.user.test.Hello2" />
        <activity
            android:name=".ui.user.signinup.Init"
            android:label="Shoex">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.user.signinup.SignIn"
            android:label="Sign In" />
        <activity
            android:name=".ui.user.signinup.SignUp"
            android:label="Sign Up" />
        <activity
            android:name=".ui.catalog.BankSelector"
            android:label="Banks" />
        <activity android:name=".ui.user.signinup.PhoneValidation"></activity>
    </application>

</manifest>
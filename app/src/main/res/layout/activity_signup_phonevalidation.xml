<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup_phonevalidation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="0dp"
        android:background="@color/greyHeaderBackground"
        android:id="@+id/viewHeaderBackground"/>

    <!--//Header description-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Por seguridad validaremos tu celular \nenviándote un código vía SMS."
        android:id="@+id/lblDescription"
        android:textColor="@color/greyHeaderLabel"
        android:textSize="14sp"
        android:layout_marginTop="25dp"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:drawablePadding="20dp"
        android:lineSpacingExtra="2sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp" />

    <!--//Top separator-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lblDescription"
        android:layout_marginTop="20dp"
        android:background="@color/rowSeparators"
        android:id="@+id/viewTopSeparator"/>

    <!--//icon y +52-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+52"
        android:id="@+id/lbl52"
        android:textColor="@color/greyBoldLabel"
        android:textSize="18sp"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:layout_below="@+id/viewTopSeparator"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:drawablePadding="20dp"
        android:gravity="center_vertical" />

    <!--//input EditText-->

    <!--//Bottom separator-->
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/viewTopSeparator"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:background="@color/rowSeparators"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPhone"
        android:hint="10 dígitos"
        android:inputType="number"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/lbl52"
        android:layout_alignBottom="@+id/lbl52"
        android:layout_toRightOf="@+id/lbl52"
        android:layout_toEndOf="@+id/lbl52"
        android:layout_marginRight="10dp"
        android:textCursorDrawable="@null"/>


</RelativeLayout>


